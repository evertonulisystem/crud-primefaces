<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/bd-crud-primefaces</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.connection.password">Imb123</property>
  <property name="hibernate.connection.pool_size">5</property>
  <property name="hibernate.connection.provider_class">java.sql.Connection</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
 </session-factory>
</hibernate-configuration>
